{
	"manifest_version": 2,
	"name":"微博相册",
	"version":"0.0.0",
	"description":"快速简单地欣赏微博上的图片",
	"icons":{
		"16":"images/logo.png",
		"48":"images/logo.png",
		"128":"images/logo.png"
	},
	"browser_action":{
		"default_icon":"images/logo.png",
		"default_title":"微博相册"
	},
	"permissions":[
		"cookies","storage","unlimitedStorage","downloads","http://weibo.com/","http://photo.weibo.com/"
	],
	"background": {
    	"scripts": ["background.js"],
    	"persistent": false
  	}
}
